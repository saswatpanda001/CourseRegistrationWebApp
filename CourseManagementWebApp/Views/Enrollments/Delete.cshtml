@model CourseManagementWebApp.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<div class="min-h-screen bg-gray-50 p-8">
    <h1 class="text-4xl font-bold text-red-600 mb-6">Delete Enrollment</h1>

    <p class="text-lg text-gray-700 mb-6">Are you sure you want to delete this enrollment?</p>

    <!-- Card Layout for Enrollment Details -->
    <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h4 class="text-xl font-semibold mb-4">Enrollment Details</h4>
        <hr class="mb-6" />

        <dl class="space-y-4">
            <!-- Enrollment Date -->
            <div class="flex">
            <dt class="w-1/3 font-medium text-gray-600">Enrollment Date:</dt>
            <dd class="w-2/3 text-gray-800">@Html.DisplayFor(model => model.EnrollmentDate)</dd>
    </div>

    <!-- Course Name -->
    <div class="flex">
        <dt class="w-1/3 font-medium text-gray-600">Course:</dt>
        <dd class="w-2/3 text-gray-800">@Html.DisplayFor(model => model.Course.CourseName)</dd>
    </div>

    <!-- User Email -->
    <div class="flex">
        <dt class="w-1/3 font-medium text-gray-600">User:</dt>
        <dd class="w-2/3 text-gray-800">@Html.DisplayFor(model => model.User.Email)</dd>
    </div>
    </dl>

    <!-- Delete Form with Tailwind Buttons -->
    <form asp-action="Delete" class="mt-8">
        <input type="hidden" asp-for="EnrollmentId" />
        <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white py-3 rounded-lg font-semibold transition duration-300">Delete</button>
    </form>

    <!-- Back to List Button -->
    <div class="mt-4">
        <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
    </div>
</div>
</div>
