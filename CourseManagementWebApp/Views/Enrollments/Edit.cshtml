@model CourseManagementWebApp.Models.Enrollment

@{
    ViewData["Title"] = "Edit Enrollment";
}

<div class="min-h-screen bg-gray-100 p-8">
    <h1 class="text-4xl font-bold text-blue-600 mb-6">Edit Enrollment</h1>

    <!-- Card Layout for Edit Form -->
    <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Enrollment Information</h4>
        <hr class="mb-6" />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <!-- Hidden EnrollmentId -->
            <input type="hidden" asp-for="EnrollmentId" />

            <!-- UserId Dropdown -->
            <div class="mb-4">
                <label asp-for="UserId" class="block text-gray-700 font-semibold mb-2">User</label>
                <select asp-for="UserId" class="form-control block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500">
                    @* Display the dropdown options dynamically *@
                    @Html.Raw(ViewBag.UserId)
                </select>
                <span asp-validation-for="UserId" class="text-red-500 text-sm"></span>
            </div>

            <!-- CourseId Dropdown -->
            <div class="mb-4">
                <label asp-for="CourseId" class="block text-gray-700 font-semibold mb-2">Course</label>
                <select asp-for="CourseId" class="form-control block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500">
                    @* Display the dropdown options dynamically *@
                    @Html.Raw(ViewBag.CourseId)
                </select>
                <span asp-validation-for="CourseId" class="text-red-500 text-sm"></span>
            </div>

            <!-- Enrollment Date -->
            <div class="mb-4">
                <label asp-for="EnrollmentDate" class="block text-gray-700 font-semibold mb-2">Enrollment Date</label>
                <input asp-for="EnrollmentDate" type="date" class="form-control block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="EnrollmentDate" class="text-red-500 text-sm"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <input type="submit" value="Save" class="btn bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>
        </form>

        <!-- Back to List Link -->
        <div class="mt-6">
            <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
