@model CourseManagementWebApp.Models.Enrollment

@{
    ViewData["Title"] = "Enrollment Details";
}

<div class="min-h-screen bg-gray-50 p-8">
    <h1 class="text-4xl font-bold text-blue-600 mb-6">Enrollment Details</h1>

    <!-- Card Layout for Enrollment Details -->
    <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Enrollment Information</h4>
        <hr class="mb-6" />

        <dl class="space-y-4">
            <!-- Enrollment Date -->
            <div class="flex">
            <dt class="w-1/3 font-medium text-gray-600">Enrollment Date:</dt>
            <dd class="w-2/3 text-gray-800">@Html.DisplayFor(model => model.EnrollmentDate)</dd>
    </div>

    <!-- Course Name -->
    <div class="flex">
        <dt class="w-1/3 font-medium text-gray-600">Course:</dt>
        <dd class="w-2/3 text-gray-800">@Html.DisplayFor(model => model.Course.CourseName)</dd>
    </div>

    <!-- User Email -->
    <div class="flex">
        <dt class="w-1/3 font-medium text-gray-600">User:</dt>
        <dd class="w-2/3 text-gray-800">@Html.DisplayFor(model => model.User.Email)</dd>
    </div>
    </dl>

    <!-- Action Links for Edit and Back to List -->
    <div class="mt-8 flex justify-between">
        <a asp-action="Edit" asp-route-id="@Model.EnrollmentId" class="text-blue-500 hover:underline font-semibold">Edit</a>
        <a asp-action="Index" class="text-blue-500 hover:underline font-semibold">Back to List</a>
    </div>
</div>
</div>
