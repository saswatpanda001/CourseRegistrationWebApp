@model IEnumerable<CourseManagementWebApp.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="min-h-screen bg-gray-100 p-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Users</h1>

    <div class="mb-6">
        <a asp-action="Create" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Create New</a>
    </div>

    <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
        <table class="min-w-full text-sm text-left text-gray-500">
            <thead class="bg-gray-200">
                <tr>
                    <th class="px-4 py-2 font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="px-4 py-2 font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Email)</th>
                    <th class="px-4 py-2 font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Password)</th>
                    <th class="px-4 py-2 font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Role)</th>
                    <th class="px-4 py-2 font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Phone)</th>
                    <th class="px-4 py-2 font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Address)</th>
                    <th class="px-4 py-2 font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-t hover:bg-gray-50">
                        <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Password)</td>
                        <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Role)</td>
                        <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Address)</td>
                        <td class="px-4 py-2">
                            <a asp-action="Edit" asp-route-id="@item.UserId" class="text-blue-500 hover:text-blue-700">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.UserId" class="text-blue-500 hover:text-blue-700">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.UserId" class="text-red-500 hover:text-red-700">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
