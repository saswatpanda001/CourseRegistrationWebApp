@model CourseManagementWebApp.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="min-h-screen bg-gray-100 p-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">User Details</h1>

    <div class="bg-white p-6 rounded-lg shadow-lg max-w-3xl mx-auto">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">User Information</h4>
        <hr class="mb-6" />

        <!-- User Information Display -->
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
            <dt class="font-medium text-gray-700">Name</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Name)</dd>
    </div>
    <div>
        <dt class="font-medium text-gray-700">Email</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Email)</dd>
    </div>
    <div>
        <dt class="font-medium text-gray-700">Password</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Password)</dd>
    </div>
    <div>
        <dt class="font-medium text-gray-700">Role</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Role)</dd>
    </div>
    <div>
        <dt class="font-medium text-gray-700">Phone</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Phone)</dd>
    </div>
    <div>
        <dt class="font-medium text-gray-700">Address</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Address)</dd>
    </div>
    </dl>

    <!-- Action Links -->
    <div class="mt-6 flex justify-between items-center">
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="text-blue-500 hover:text-blue-600 text-lg font-medium">Edit</a>
        <a asp-action="Index" class="text-blue-500 hover:text-blue-600 text-lg font-medium">Back to List</a>
    </div>
</div>
</div>
