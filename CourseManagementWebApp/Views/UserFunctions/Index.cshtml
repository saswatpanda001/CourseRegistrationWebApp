@model IEnumerable<CourseManagementWebApp.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1 class="text-4xl font-bold text-center my-8 text-gray-900">All Courses</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 px-4">
    @foreach (var course in Model)
    {
        <div class="bg-gradient-to-br from-indigo-500 via-purple-600 to-pink-500 p-6 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105 cursor-pointer">
            <a asp-action="Details" asp-route-id="@course.CourseId" class="block text-center text-white">
                <h2 class="text-2xl font-semibold mb-4 text-white truncate hover:text-gray-300 transition duration-200">@course.CourseName</h2>
                <p class="text-white text-base mb-4 line-clamp-3">@course.Description</p>
                <p class="text-white mt-2">Start Date: <span class="font-semibold">@course.StartDate.ToString("MMMM dd, yyyy")</span></p>
                <p class="text-white">End Date: <span class="font-semibold">@course.EndDate.ToString("MMMM dd, yyyy")</span></p>
            </a>
        </div>
    }
</div>
