@model CourseManagementWebApp.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="bg-white shadow-lg rounded-lg p-8 max-w-lg w-full">
        <h1 class="text-3xl font-bold text-red-600 mb-6">Delete Course</h1>
        <p class="text-gray-700 mb-4">Are you sure you want to delete this course?</p>

        <div class="mb-6">
            <h4 class="text-xl font-semibold text-gray-800">Course Details</h4>
            <hr class="my-4" />

            <dl class="grid grid-cols-2 gap-4">
                <dt class="text-gray-600 font-medium">Course Name:</dt>
                <dd class="text-gray-800">@Html.DisplayFor(model => model.CourseName)</dd>

                <dt class="text-gray-600 font-medium">Description:</dt>
                <dd class="text-gray-800">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="text-gray-600 font-medium">Start Date:</dt>
                <dd class="text-gray-800">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="text-gray-600 font-medium">End Date:</dt>
                <dd class="text-gray-800">@Html.DisplayFor(model => model.EndDate)</dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CourseId" />
            <div class="flex space-x-4">
                <!-- Delete Button -->
                <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition duration-300">
                    Delete
                </button>
                <!-- Back Button -->
                <a asp-action="Index" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400 transition duration-300">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>
