@model CourseManagementWebApp.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="bg-white shadow-xl rounded-lg p-8 max-w-lg w-full">
        <h1 class="text-3xl font-bold text-blue-600 mb-6">Course Details</h1>

        <div class="mb-6">
            <h4 class="text-xl font-semibold text-gray-800 mb-4">Course Information</h4>
            <div class="space-y-4">
                <div class="flex justify-between">
                    <span class="text-gray-600 font-medium">Course Name:</span>
                    <span class="text-gray-800">@Html.DisplayFor(model => model.CourseName)</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600 font-medium">Description:</span>
                    <span class="text-gray-800">@Html.DisplayFor(model => model.Description)</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600 font-medium">Start Date:</span>
                    <span class="text-gray-800">@Html.DisplayFor(model => model.StartDate)</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600 font-medium">End Date:</span>
                    <span class="text-gray-800">@Html.DisplayFor(model => model.EndDate)</span>
                </div>
            </div>
        </div>

        <div class="flex space-x-4">
            <!-- Edit Button -->
            <a asp-action="Edit" asp-route-id="@Model.CourseId" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-300">
                Edit
            </a>
            <!-- Back Button -->
            <a asp-action="Index" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400 transition duration-300">
                Back to List
            </a>
        </div>
    </div>
</div>
