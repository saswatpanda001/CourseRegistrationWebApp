<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CourseManagementWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CourseManagementWebApplication</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (CourseManagementWebApp.Controllers.SessionManager.LoggedInUser != null && CourseManagementWebApp.Controllers.SessionManager.LoggedInUser.Role == "User")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Dashboard">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="EditProfile">EditProfile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="UserFunctions" asp-action="Index">Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="UserFunctions" asp-action="ShowEnrollments">Enrollments</a>
                            </li>

                            <li class="nav-item"><a class="nav-link text-dark" href="/Account/Logout">Logout</a></li>
                        }

                        @if (CourseManagementWebApp.Controllers.SessionManager.LoggedInUser != null && CourseManagementWebApp.Controllers.SessionManager.LoggedInUser.Role == "Admin")
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="AdminDashboard">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Manage Users</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Index">Manage Courses</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Enrollments" asp-action="Index">Manage Enrollments</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="BulkDelete">Bulk User Deletion</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="BulkDeleteCourses">Bulk Courses Deletion</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="GenerateCsv">Generate Report</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" href="/Account/Logout">Logout</a></li>
                        }

                        @if (CourseManagementWebApp.Controllers.SessionManager.LoggedInUser == null)
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">User Login</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="AdminLogin">Admin Login</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ResetPassword">ResetPassword</a></li>

                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
